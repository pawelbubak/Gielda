<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.symulacja.gieldy.controllers.content.FundListController">
    <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <AnchorPane>
               <children>
                    <TableView fx:id="investor_table"  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <columns>
                            <TableColumn fx:id="fundName" maxWidth="1.7976931348623157E308" minWidth="200.0"  prefWidth="-1.0" text="Imię" />
                            <TableColumn fx:id="name" editable="false" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="-1.0" resizable="false" text="Nazwisko" />
                            <TableColumn fx:id="surname" maxWidth="300.0" minWidth="200.0" prefWidth="-1.0" resizable="false" text="PESEL" />
                            <TableColumn fx:id="currency" maxWidth="200.0" minWidth="150.0" prefWidth="-1.0" text="Budżet" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
               </children>
            </AnchorPane>
         </center>
         <bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="moreButton" mnemonicParsing="false" onAction="#moreOnAction" prefWidth="80.0" text="Szczegóły" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="15.0" />
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#editOnAction" prefWidth="80.0" text="Edytuj" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="130.0" AnchorPane.topAnchor="15.0" />
               </children>
            </AnchorPane>
         </bottom>
      </BorderPane>
    </children>
</AnchorPane>
