<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.symulacja.gieldy.controllers.panel.CompanyInformationPanelController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="information_box_title" alignment="CENTER" text="Spółka" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
            </top>
            <center>
                <AnchorPane fx:id="information_box_label" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                  <VBox spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Nazwa" />
                              <TextField fx:id="namelabel" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Data pierwszej wyceny" />
                              <TextField fx:id="data_wyceny" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Aktualny kurs" />
                              <TextField fx:id="kurs" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Kurs otwarcia" />
                              <TextField fx:id="kurs_otwarcia" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Maksymalny kurs" />
                              <TextField fx:id="max_kurs" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Minimalny kurs" />
                              <TextField fx:id="min_kurs" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Liczba wypuszczonych akcji" />
                              <TextField fx:id="liczba_akcji" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Zysk" />
                              <TextField fx:id="zysk" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Przychód" />
                              <TextField fx:id="przychod" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Kapitał własny" />
                              <TextField fx:id="wkapital" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Kapitał zakładowy" />
                              <TextField fx:id="zkapital" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Wolumen" />
                              <TextField fx:id="wolumen" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                                    <Label prefHeight="20.0" text="Obroty" />
                              <TextField fx:id="obroty" disable="true" prefHeight="25.0" />
                           </children>
                        </VBox>
                        <VBox fx:id="boxToBuy">
                           <children>
                              <Label prefHeight="20.0" text="Cena wykupu pojedynczej akcji" />
                              <TextField fx:id="priceToBuy" prefHeight="25.0" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                    </children>
                </AnchorPane>
            </center>
         <bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeOnAction" prefWidth="80.0" text="Usuń" visible="false" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0" />
                  <Button fx:id="buyButton" mnemonicParsing="false" onAction="#buyOnAction" prefWidth="80.0" text="Wykup" visible="false" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="20.0" />
               </children>
            </AnchorPane>
         </bottom>
        </BorderPane>
    </children>
</AnchorPane>
